@model StudentPortal.Models.AddStudentViewModel

<h4> Add Student</h4>

<form method="post">
    <div>
            <label><big>Name</big></label>
            <input type="text" placeholder="Enter Text" asp-for="Name"/><br /><br />
    </div>
    <div>
            <label><big>Email</big></label>
            <input type="email" placeholder="Enter email" asp-for="Email"/><br /><br />
    </div>
    <div>
            <label><big>Phone</big></label>
            <input type="text" placeholder="Enter Phone" asp-for="Phone"/><br /><br />
    </div>
    <div>
           <input type="checkbox" id="Subscribed" asp-for="Subscribed"/>
            <label for="Subscribed"><big>Subcribed</big></label><br /><br />
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>

</form>